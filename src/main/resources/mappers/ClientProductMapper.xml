<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sharpic.domain.ClientProductMapper">
    <resultMap id="ResultMap" type="ClientProduct">
        <result column="id" property="id"/>
        <result column="client_name" property="clientName"/>
        <result column="name" property="name"/>
        <result column="size_id" property="sizeId"/>
        <result column="serving" property="serving"/>
        <result column="retail_price" property="retailPrice"/>
        <result column="update_datetime" property="updatedDatetime"/>
    </resultMap>

    <select id="getClientProducts" resultMap="ResultMap">
        select id, client_name, name, size_id, serving, retail_price, update_datetime from client_product
        where client_name=#{clientName}
    </select>
</mapper>