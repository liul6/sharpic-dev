<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sharpic.domain.AuditMapper">
    <resultMap id="ResultMap" type="Audit">
        <id column="id" property="id"/>
        <result column="client_name" property="clientName"/>
        <result column="audit_date" property="auditDate"/>
        <result column="notes" property="notes"/>
        <result column="update_datetime" property="updatedDatetime"/>
    </resultMap>

    <select id="getClientAudits" resultMap="ResultMap">
        select client_name, audit_date, notes, update_datetime from audit where client_name=#{clientName} order by audit_date desc
    </select>

    <select id="getAuditId" resultType="int">
        select id from audit where audit_date=#{auditDate}
    </select>

</mapper>